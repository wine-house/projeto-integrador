                            <figure class="promotion__item__image">
                                <%if(produto.tipo == "Vinho Tinto") { %>
                                <img src="/images/tela-home/red-wine/<%= produto.imagem[1]%>.jpg" alt="Vinho Tinto">
                                <% } %>

                                <%if(produto.tipo == "Vinho Branco") { %>
                                <img src="/images/tela-home/white-wine/<%= produto.imagem[1]%>.jpg" alt="Vinho Tinto">
                                <% } %>
                            </figure>

                            <span class="promotion__item__price"><%= produto.valor%></span>
                        </header>

                        <footer>
                            <span class="promotion__item__name"><%= produto.nome%></span>
                            <button class="promotion__item__btn">Comprar</button>
                        </footer>
                    </article>
                    <% } %>
                <% } %>

